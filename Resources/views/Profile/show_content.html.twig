{%- trans_default_domain 'EMSCoreBundle' -%}

<div class="row">

<div class="col-md-5 col-md-offset-4">

          <!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">
	            <a href="https://www.gravatar.com/emails" target="_blank">
	              <img class="profile-user-img img-responsive img-circle" src="https://www.gravatar.com/avatar/{{ app.user.email|lower|md5 }}?d={{ "https://www.gravatar.com/avatar"|url_encode }}" alt="User profile picture">
	            </a>

              <h3 class="profile-username text-center">{{ user.displayName }}</h3>

              <p class="text-muted text-center">{{ user.username }}</p>

              <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                  <b>Login</b> <i class="pull-right">{{ user.username }}</i>
                </li>
                <li class="list-group-item">
                  <b>Display name</b> <i class="pull-right">{{ user.displayName }}</i>
                </li>
                <li class="list-group-item">
                  <b>Email</b> <i class="pull-right">{{ user.email }}</i>
                </li>
                <li class="list-group-item">
                  <b>{{ 'Email notification' }}</b> <i class="pull-right fa fa-2x fa-{% if user.emailNotification %}check-{% endif %}square-o"></i>
                </li>
                {% if circles_object and circles_object|get_content_type %}
                    <li class="list-group-item">
                      <b>{{ circles_object|get_content_type.pluralName }} : </b>
                      <i class="">
                      	{% for circle in user.circles  -%}
                            <span class="badge text-nowrap">{{- circle|data_label|raw -}}</span>&nbsp;
                      	{%- endfor %}
    				  </i>
                    </li>
                {% endif %}
                <li class="list-group-item">
                  <b>Roles : </b>
                  <i class="">
                  	{% for role in user.roles  -%}
                        <span class="badge text-nowrap">{{- role|trans -}}</span>&nbsp;
                  	{%- endfor %}
				  </i>
                </li>
                <li class="list-group-item">
                  <b>WYSIWYG</b> <i class="pull-right">{% if user.wysiwygProfile %}{{ user.wysiwygProfile.name }}{% endif %}</i>
                </li>
              </ul>

				<div class="btn-group">
	              <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary"><i class="fa fa-pencil"></i> <b>Edit</b></a>
	              <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary"><i class="fa fa-lock"></i> <b>Change password</b></a>
				</div>
              
              
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

        </div>
</div>