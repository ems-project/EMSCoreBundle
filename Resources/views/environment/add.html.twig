{% extends 'EMSCoreBundle::base.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}
    {{ managed ? 'Add a new Environment' : 'Add a new External Environment' }}
{% endblock %}
{% block pagetitle %}
    {{ managed ? 'Add a new Environment' : 'Add a new External Environment' }}
{% endblock %} 

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="box ">
                <div class="box-header with-border">
                    <i class="fa fa-warning"></i>
                    <h3 class="box-title">Notice</h3>
                </div>
                <div class="box-body">
                    {% if managed %}
                        <p>This operation will create a new elastic search index with an alias pointing to it.</p>
                    {% else %}
                        <p>This operation will allow you to manage an elasticsearch's alias.</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ managed ? 'New Environment' : 'New External Environment' }}</h3>
                </div>
                {{ form_start(form) }}
                <div class="box-body">
                    {{ form_row(form.name) }}
                    {{ form_row(form.color) }}
                </div>
                <div class="box-footer">
                    {{ form_widget(form.save) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %} 


{% block javascripts %}
    {% include 'EMSCoreBundle:app:menu.html.twig' with {'item':  'environment-add'} %}
{% endblock %}	
