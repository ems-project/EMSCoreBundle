<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="EMS\CoreBundle\Entity\I18n" table="i18n">

    <id name="id" type="integer" column="id">
      <generator/>
    </id>

    <field name="identifier" length="200" unique="true" />
    <field name="content" type="json" />

    <field name="created" type="datetime"/>
    <field name="modified" type="datetime"/>
    <lifecycle-callbacks>
      <lifecycle-callback type="prePersist" method="updateModified" />
      <lifecycle-callback type="preUpdate" method="updateModified" />
    </lifecycle-callbacks>
  </entity>
</doctrine-mapping>
