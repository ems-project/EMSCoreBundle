<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="emsco_admin_environment_remove" path="/remove/{environment}"
           controller="EMS\CoreBundle\Controller\Admin\EnvironmentController::remove"
           methods="POST"/>
    <route id="emsco_admin_environment_add" path="/add"
           controller="EMS\CoreBundle\Controller\Admin\EnvironmentController::add"
           methods="GET|POST"/>
    <route id="emsco_admin_environment_edit" path="/edit/{environment}"
           controller="EMS\CoreBundle\Controller\Admin\EnvironmentController::edit"
           methods="GET|POST"/>
    <route id="emsco_admin_environment_view" path="/{environment}"
           controller="EMS\CoreBundle\Controller\Admin\EnvironmentController::view"
           methods="GET|POST"/>
    <route id="emsco_admin_environment_rebuild" path="/rebuild/{environment}"
           controller="EMS\CoreBundle\Controller\Admin\EnvironmentController::rebuild"
           methods="GET|POST"/>
    <route id="emsco_admin_environment_index" path="/"
           controller="EMS\CoreBundle\Controller\Admin\EnvironmentController::index"
           methods="GET|POST"/>
</routes>
