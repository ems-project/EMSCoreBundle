<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="emsco_api_content_type_index" path="/{entity}" methods="GET">
        <default key="_controller">EMS\CoreBundle\Controller\Api\Admin\EntityController:index</default>
    </route>
    <route id="emsco_api_content_type_get" path="/{entity}/{name}" methods="GET">
        <default key="_controller">EMS\CoreBundle\Controller\Api\Admin\EntityController:get</default>
    </route>
    <route id="emsco_api_content_type_update" path="/{entity}/{name}" methods="POST">
        <default key="_controller">EMS\CoreBundle\Controller\Api\Admin\EntityController:update</default>
    </route>

</routes>
