<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="emsco_api_search" path="/search"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::search"
           methods="POST"/>
    <route id="emsco_api_search_count" path="/count"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::count"
           methods="POST"/>
    <route id="emsco_api_cluster_version" path="/version"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::version"
           methods="GET"/>
    <route id="emsco_api_cluster_health_status" path="/health-status"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::healthStatus"
           methods="GET"/>
    <route id="emsco_api_scroll_init" path="/init-scroll"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::initScroll"
           methods="POST"/>
    <route id="emsco_api_scroll_next" path="/next-scroll"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::nextScroll"
           methods="POST"/>
    <route id="emsco_api_index_refresh" path="/refresh"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::refresh"
           methods="POST"/>
    <route id="emsco_api_indices_from_alias" path="/indices-from-alias"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::getIndicesFromAlias"
           methods="POST"/>
    <route id="emsco_api_indices_from_aliases" path="/indices-from-aliases"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::getIndicesFromAliases"
           methods="POST"/>
    <route id="emsco_api_aliases_from_index" path="/aliases-from-index"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::getAliasesFromIndex"
           methods="POST"/>
    <route id="emsco_api_get_document" path="/document"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::getDocument"
           methods="POST"/>
    <route id="emsco_api_aliases_for_content_type" path="/indices-for-content-type"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::getIndicesForContentTypes"
           methods="POST"/>
    <route id="emsco_api_filter_stop_words" path="/filter-stop-words"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::filterStopWords"
           methods="POST"/>
    <route id="emsco_api_analyze" path="/analyze"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::analyze"
           methods="POST"/>
    <route id="emsco_api_has_index" path="/has-index"
           controller="EMS\CoreBundle\Controller\Api\Search\SearchController::hasIndex"
           methods="POST"/>

</routes>
