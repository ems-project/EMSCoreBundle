<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ems_core_channel_index" path="/"
           controller="EMS\CoreBundle\Controller\ChannelController::index"
           methods="GET|POST"/>
    <route id="ems_core_channel_add" path="/add"
           controller="EMS\CoreBundle\Controller\ChannelController::add"
           methods="GET|POST"/>
    <route id="ems_core_channel_edit" path="/edit/{channel}"
           controller="EMS\CoreBundle\Controller\ChannelController::edit"
           methods="GET|POST"/>
    <route id="ems_core_channel_delete" path="/delete/{channel}"
           controller="EMS\CoreBundle\Controller\ChannelController::delete"
           methods="POST"/>

</routes>
