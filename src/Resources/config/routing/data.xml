            format="json"/>
    <route id="emsco_data_finalize" path="/draft/finalize/{revision}"
           controller="EMS\CoreBundle\Controller\ContentManagement\DataController::finalizeDraft"
           methods="POST"/>


    <route id="emsco_data_default_view" path="/{type}"
