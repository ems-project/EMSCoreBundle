<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="environment.attach" path="/attach/{name}"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::attachAction"
           methods="POST"/>
    <route id="environment.remove.alias" path="/remove/alias/{name}"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::removeAliasAction"
           methods="POST"/>
    <route id="environment.remove" path="/remove/{id}"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::removeAction"
           methods="POST"/>
    <route id="environment.add" path="/add"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::addAction"
           methods="GET|POST"/>
    <route id="environment.edit" path="/edit/{id}"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::editAction"
           methods="GET|POST"/>
    <route id="environment.view" path="/{id}"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::viewAction"
           methods="GET|POST"/>
    <route id="environment.rebuild" path="/rebuild/{id}"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::rebuild"
           methods="GET|POST"/>
    <route id="environment.index" path="/"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::indexAction"
           methods="GET|POST"/>
    <route id="ems_environment_index" path="/"
           controller="EMS\CoreBundle\Controller\ContentManagement\EnvironmentController::indexAction"
           methods="GET|POST"/>
</routes>
