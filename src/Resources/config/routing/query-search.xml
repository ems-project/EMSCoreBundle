<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ems_core_query_search_index" path="/"
           controller="EMS\CoreBundle\Controller\QuerySearchController::index"
           methods="GET|POST"/>
    <route id="ems_core_query_search_add" path="/add"
           controller="EMS\CoreBundle\Controller\QuerySearchController::add"
           methods="GET|POST"/>
    <route id="ems_core_query_search_edit" path="/edit/{query_search}"
           controller="EMS\CoreBundle\Controller\QuerySearchController::edit"
           methods="GET|POST"/>
    <route id="ems_core_query_search_delete" path="/delete/{query_search}"
           controller="EMS\CoreBundle\Controller\QuerySearchController::delete"
           methods="POST"/>
    <route id="ems_core_query_search" path="/datatable.json"
           controller="EMS\CoreBundle\Controller\QuerySearchController::ajaxDataTable"
           methods="GET"/>
</routes>
