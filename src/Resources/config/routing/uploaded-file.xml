<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ems_core_uploaded_file_index" path="/" methods="GET POST">
        <default key="_controller">EMS\CoreBundle\Controller\UploadedFileController:index</default>
    </route>

    <route id="ems_core_uploaded_file_ajax" path="/datatable.json" methods="GET">
        <default key="_controller">EMS\CoreBundle\Controller\UploadedFileController:ajaxDataTableGroupedByHash</default>
    </route>

    <route id="ems_core_uploaded_file_hide_by_hash" path="/delete/{hash}" methods="POST">
        <default key="_controller">EMS\CoreBundle\Controller\UploadedFileController:hideByHash</default>
    </route>

</routes>
