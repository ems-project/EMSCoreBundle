<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="emsco_user_profile" path="/profile"
           controller="EMS\CoreBundle\Controller\User\ProfileController::show"
           methods="GET"/>
    <route id="emsco_user_profile_edit" path="/profile/edit"
           controller="EMS\CoreBundle\Controller\User\ProfileController::edit"
           methods="GET|POST"/>
    <route id="emsco_user_change_password" path="/profile/change-password"
           controller="EMS\CoreBundle\Controller\User\ProfileController::changePassword"
           methods="GET|POST"/>
</routes>
