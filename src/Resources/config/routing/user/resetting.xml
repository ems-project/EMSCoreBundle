<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="emsco_user_resetting_request" path="/resetting/request"
           controller="EMS\CoreBundle\Controller\User\ResettingController::request"
           methods="GET|POST"/>
    <route id="emsco_user_resetting_check_email" path="/resetting/check_email"
           controller="EMS\CoreBundle\Controller\User\ResettingController::checkEmail"
           methods="GET"/>
    <route id="emsco_user_resetting_reset" path="/resetting/reset/{token}"
           controller="EMS\CoreBundle\Controller\User\ResettingController::reset"
           methods="GET|POST"/>

</routes>