<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ems_wysiwyg_index" path="/"
           controller="EMS\CoreBundle\Controller\WysiwygController::indexAction"
           methods="GET|POST"/>
    <route id="ems_wysiwyg_profile_new" path="/profile/new"
           controller="EMS\CoreBundle\Controller\WysiwygController::newProfileAction"
           methods="GET|POST"/>
    <route id="ems_wysiwyg_styles_set_new" path="/styles-set/new"
           controller="EMS\CoreBundle\Controller\WysiwygController::newStylesSetAction"
           methods="GET|POST"/>
    <route id="ems_wysiwyg_styles_set_edit" path="/styles-set/{id}"
           controller="EMS\CoreBundle\Controller\WysiwygController::editStylesSetAction"
           methods="GET|POST"/>
    <route id="ems_wysiwyg_profile_edit" path="/profile/{id}"
           controller="EMS\CoreBundle\Controller\WysiwygController::editProfileAction"
           methods="GET|POST"/>
</routes>
