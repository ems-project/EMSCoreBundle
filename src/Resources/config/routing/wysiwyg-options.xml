<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ems_wysiwyg_index" path="/" methods="GET POST">
        <default key="_controller">EMS\CoreBundle\Controller\WysiwygController::indexAction</default>
    </route>
    <route id="ems_wysiwyg_profile_new" path="/profile/new" methods="GET POST">
        <default key="_controller">EMS\CoreBundle\Controller\WysiwygController::newProfileAction</default>
    </route>
    <route id="ems_wysiwyg_styles_set_new" path="/styles-set/new" methods="GET POST">
        <default key="_controller">EMS\CoreBundle\Controller\WysiwygController::newStylesSetAction</default>
    </route>
    <route id="ems_wysiwyg_styles_set_edit" path="/styles-set/{id}" methods="GET POST">
        <default key="_controller">EMS\CoreBundle\Controller\WysiwygController::editStylesSetAction</default>
    </route>
    <route id="ems_wysiwyg_profile_edit" path="/profile/{id}" methods="GET POST">
        <default key="_controller">EMS\CoreBundle\Controller\WysiwygController::editProfileAction</default>
    </route>
</routes>
