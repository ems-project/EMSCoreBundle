<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="ems_core.security.login_manager" class="EMS\CoreBundle\Security\LoginManager">
            <argument>%ems_core.security.firewall.core%</argument>
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="security.user_checker"/>
            <argument type="service" id="security.authentication.session_strategy"/>
            <argument type="service" id="request_stack"/>
            <argument>null</argument> <!-- remember_me service -->
        </service>



        <service id="emsco.security.core.user_provider" class="EMS\CoreBundle\Security\Core\CoreUserProvider">
            <argument type="service" id="ems.repository.user"/>
        </service>
        <service id="emsco.security.core.authenticator" class="EMS\CoreBundle\Security\Core\CoreAuthenticator">
            <argument type="service" id="security.csrf.token_manager"/>
            <argument type="service" id="security.password_encoder"/>
            <argument type="service" id="router"/>
        </service>

        <service id="emsco.security.api.user_provider" class="EMS\CoreBundle\Security\Api\ApiUserProvider">
            <argument type="service" id="ems.service.user" />
        </service>
        <service id="emsco.security.api.authenticator" class="EMS\CoreBundle\Security\Api\ApiAuthenticator" />

        <service id="ems.security.authenticator" class="EMS\CoreBundle\Security\Authenticator">
            <argument type="service" id="security.authentication.manager"/>
            <argument type="service" id="doctrine"/>
        </service>
    </services>
</container>