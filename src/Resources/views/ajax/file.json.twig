{% extends '@EMSCore/ajax/notification.json.twig' %}

{% block body %}
	"sha1": {{ asset.sha1|json_encode|raw }},
	"hash": {{ asset.sha1|json_encode|raw }},
	"type": {{ asset.type|json_encode|raw }},
	"available": {{ asset.available|json_encode|raw }},
	"name": {{ asset.name|json_encode|raw }},
	"size": {{ (asset.size+0)|json_encode|raw }},
	"status": {{ asset.status|json_encode|raw }},
	"uploaded": {{ (asset.uploaded+0)|json_encode|raw }},
	"user": {{ asset.user|json_encode|raw }},   
	"fileName": {{ asset.name|json_encode|raw }},
    "previewUrl": {{ emsco_asset_path(asset.data, 'preview', {}, 'ems_asset',
    	constant('EMS\\CommonBundle\\Helper\\EmsFields::CONTENT_FILE_HASH_FIELD'),
    	constant('EMS\\CommonBundle\\Helper\\EmsFields::CONTENT_FILE_NAME_FIELD'),
    	constant('EMS\\CommonBundle\\Helper\\EmsFields::CONTENT_MIME_TYPE_FIELD'),
    	constant('Symfony\\Component\\Routing\\Generator\\UrlGeneratorInterface::ABSOLUTE_PATH'))|json_encode|raw }},
	"chunkUrl": {{ path(apiRoute?'emsco_file_api_chunk_upload':'emsco_file_data_chunk_upload', { hash: asset.sha1 })|json_encode|raw }},
    "url": {{ ems_asset_path(asset.data, {}, 'ems_asset',
    	constant('EMS\\CommonBundle\\Helper\\EmsFields::CONTENT_FILE_HASH_FIELD'),
    	constant('EMS\\CommonBundle\\Helper\\EmsFields::CONTENT_FILE_NAME_FIELD'),
    	constant('EMS\\CommonBundle\\Helper\\EmsFields::CONTENT_MIME_TYPE_FIELD'),
    	constant('Symfony\\Component\\Routing\\Generator\\UrlGeneratorInterface::ABSOLUTE_PATH'))|json_encode|raw }},
{% endblock %}