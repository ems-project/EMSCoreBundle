{% trans_default_domain 'EMSCoreBundle' %}

{% if channels|default([])|length > 0 %}
<li class="dropdown channels-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-eye"></i>
    </a>
    <ul class="dropdown-menu">
        {% for channel in channels %}
        <li>
            <a href="{{ channel.entryPath }}" target="_blank">
                <i class="fa fa-{{ channel.public|default ? 'unlock-alt' : 'lock' }}" aria-hidden="true"></i>
                {{ channel.label }}
            </a>
        </li>
        {% endfor %}
    </ul>
</li>
{% endif %}
