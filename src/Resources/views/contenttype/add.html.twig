{% extends '@EMSCore/base.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}Add a new Content Type{% endblock %}
{% block pagetitle %}Add a new Content Type{% endblock %} 
{% block subtitle %}<small>The Elasticsearch mapping will be initialized later</small>{% endblock %} 


{% block body %}

<div class="row">
	<div class="col-md-6">
		<div class="box ">
			<div class="box-header with-border">
				<i class="fa fa-warning"></i>
				<h3 class="box-title">Notice</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<p>
					This operation will <strong>not</strong> directly create a <strong>new Content Type</strong>. 
					But it will just instianciate a new draft.
				</p><p>
					Until that draft is released nothing will transmited to Elasticsearch.
					Take the time you need to review the Content Type.
				</p>
			</div>
			<!-- /.box-body -->
		</div>
	</div>
	<div class="col-md-6">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">New Content Type</h3>
			</div>
			<!-- /.box-header -->
			<!-- form start -->
			{{ form_start(form) }}
				
				<div class="box-body">
					{{ form_row(form.name) }}
					{{ form_row(form.singularName) }}
					{{ form_row(form.pluralName) }}
					{{ form_row(form.environment) }}
					{{ form_row(form.import) }}

				</div>
				<!-- /.box-body -->
				<div class="box-footer">
					{{ form_widget(form.save) }}

                    {# 					{% include '@EMSCore/elements/get-button.html.twig' with {#}
{# 						'url':  path('contenttype.edit', {'id': contentType.id}),#}
{# 						'label': 'Refresh',#}
{# 						'icon': 'refresh'#}
{# 					}%}#}
				</div>
			{{ form_end(form) }}

		</div>
		<!-- /.box -->
	</div>
</div>

{% include '@EMSCore/app/menu.html.twig' with {
	'item':  'contenttype-list'
}%}
{% endblock %}	