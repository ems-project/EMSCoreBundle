{% extends '@EMSCore/base.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}Add a referenceable content type{% endblock %}
{% block pagetitle %}Add a referenceable content type{% endblock %} 

{% block breadcrumb %}
	<ol class="breadcrumb">
		<li><a href="{{ path("contenttype.index") }}"><i class="fa fa-cubes"></i> Content Types`</a></li>
   		<li class="active">add referenceable content type</li>
   	</ol>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="box ">
			<div class="box-header with-border">
				<i class="fa fa-sitemap"></i>
				<h3 class="box-title">Referenceable content types</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<div class="table-responsive">
				<table class="table table-condensed table-striped">
					<tbody>
						<tr>
							<th class="text-center" style="width: 10px">#</th>
							<th class="" style="">Name</th>
							<th>Index</th>
							<th>Action</th>
						</tr>
						{% for contentType in referencedContentTypes %}
							<tr class="">
								<td class="text-center">{{ loop.index }}.</td>
								<td>{{ contentType.name }}</td>
								<td>{{ contentType.alias }}</td>
								<td>
								
									<div class="btn-group">
                                        {% include '@EMSCore/elements/post-button.html.twig' with {
											'url':  path('contenttype.unreferenced', {'name': contentType.name, 'envId': contentType.envId}),
											'label': 'Add',
											'icon': 'plus'
										}%}
				                    </div>
								
              
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				</div>

			</div>
			<!-- /.box-body -->
		</div>
	</div>
</div>

{% include '@EMSCore/app/menu.html.twig' with {
	'item':  'environment-list'
}%}
{% endblock %}	
