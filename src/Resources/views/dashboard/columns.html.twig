{% extends '@EMSCore/dashboard/form.html.twig' %}
{% trans_default_domain 'emsco-twigs' %}

{% block type %}
    <i class="{{ [line.data.type, 'icon']|join('.')|trans }}"></i>&nbsp;&nbsp;{{ [line.data.type, 'label']|join('.')|trans }}
{% endblock type %}

{% block definition %}
    {% if line.data.definition %}
        {{ t('core.dashboard.definition', {'value': line.data.definition}, 'emsco-core')|trans }}
    {% endif %}
{% endblock definition %}