{% extends '@EMSCore/base.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}Add a new Environment{% endblock %}
{% block pagetitle %}Add a new Environment{% endblock %} 


{% block body %}

<div class="row">
	<div class="col-md-6">
		<div class="box ">
			<div class="box-header with-border">
				<i class="fa fa-warning"></i>
				<h3 class="box-title">Notice</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<p>
					This operation will create a new elastic search index with an alias pointing to it.
				</p>
			</div>
			<!-- /.box-body -->
		</div>
	</div>
	<div class="col-md-6">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">New Environment</h3>
			</div>
			<!-- /.box-header -->
			<!-- form start -->
			{{ form_start(form) }}
				
				<div class="box-body">
					{{ form_row(form.name) }}
					{{ form_row(form.color) }}
{# 					{{ form_row(form.managed) }}#}

				</div>
				<!-- /.box-body -->
				<div class="box-footer">
					{{ form_widget(form.save) }}
				</div>
			{{ form_end(form) }}

		</div>
		<!-- /.box -->
	</div>
</div>
{% include '@EMSCore/app/menu.html.twig' with {
	'item':  'environment-list'
}%}
{% endblock %}	
