{% trans_default_domain 'EMSCoreBundle' %}

<div class="row">
	<div class="col-md-3">
		<div class="box ">
			<div class="box-header with-border">
				<i class="fa fa-warning"></i>
				<h3 class="box-title">{{ 'Notice'|trans }}</h3>
			</div>
			<!-- /.box-header -->
			<div class="box-body">
				<p>
					{{ 'All environments have to be re-builded each times that the filters configuration is updated.'|trans|raw }}
				</p>
			</div>
			<!-- /.box-body -->
		</div>
	</div>
	<div class="col-md-9">
		<!-- general form elements -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">{{ label|trans }}</h3>
			</div>
			<!-- /.box-header -->
            <!-- form start -->
            {{ form_start(form) }}	
            	<div class="box-body">
            		{{ form_row(form.name) }}
            		{{ form_row(form.label) }}
            		{{ form_widget(form.options) }}
            	</div>
            	<!-- /.box-body -->
            	<div class="box-footer">
            		{{ form_widget(form.save) }}
            	</div>
            {{ form_end(form) }}
			
		</div>
		<!-- /.box -->
	</div>
</div>