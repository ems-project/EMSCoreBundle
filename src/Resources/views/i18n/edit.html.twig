{% extends '@EMSCore/base.html.twig' %} {% trans_default_domain 'EMSCoreBundle' %}

{% block title %} {{ 'I18N edit'|trans }} {%endblock %}
{% block pagetitle %} {{ 'I18N edit'|trans }} {% endblock %} 

{% block breadcrumb %}
	<ol class="breadcrumb">
		<li><a href="{{ path('i18n_index') }}"><i class="fa fa-language"></i> {{ 'I18N'|trans }}</a></li>
   		<li class="active">{{ 'I18N edit'|trans }} </li>
   	</ol>
