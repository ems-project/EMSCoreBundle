{% extends '@EMSCore/base.html.twig' %}
{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}{{ 'release.revision.view.title'|trans }}{% endblock %}
{% block pagetitle %}{{ block('title') }}{% endblock %}

{% block breadcrumb %}
	<ol class="breadcrumb">
		<li><a href="{{ path('ems_core_release_index') }}"><i class="{{ 'view.icon.class.release'|trans }}"></i> {{ 'release.menu'|trans }}</li></a>
		<li>{{ block('title') }}</li>
   	</ol>
{% endblock %}

{% block body %}
    {%  set toolbar %}
    {%  endset %}
    
    {% if form is not null %}
        {% form_theme form '@EMSCore/form/forms.html.twig' %}
        {{ form(form, {
            toolbar: toolbar
        }) }}
    {% endif %}
    
    {% include '@EMSCore/elements/get-button.html.twig' with {
        'url':  path('ems_core_release_index'),
        'label': 'All Releases',
        'icon': 'cube'
    }%}
{% endblock %}