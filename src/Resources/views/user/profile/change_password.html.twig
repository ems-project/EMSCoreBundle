{%- trans_default_domain 'emsco-user' -%}
{% extends '@EMSCore/layout.html.twig' %}

{% block title %}{{ 'user.change_password.title'|trans }}{% endblock %}
{% block pagetitle %}{{ 'user.change_password.title'|trans }}{% endblock %}
{% block subtitle %}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">{{ 'user.change_password.title'|trans }}</h3>
                </div>
                {{ form_start(form, { 'action': path(routes.USER_CHANGE_PASSWORD), 'attr': { 'class': 'emsco_user_change_password' } }) }}
                    <div class="box-body">
                        {{ form_errors(form) }}
                        {{ form_row(form.current_password) }}
                        {{ form_row(form.plainPassword) }}
                    </div>
                    <div class="box-footer">
                        {{ form_row(form._token) }}
                        <input type="submit" value="{{ 'user.change_password.submit'|trans }}" class="btn btn-primary"/>
                        <a href="{{ path(routes.USER_PROFILE) }}" class="btn pull-right btn-default">{{ 'user.change_password.cancel'|trans }}</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock content %}
