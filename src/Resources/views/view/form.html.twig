{% extends '@EMSCore/view/abstract.html.twig' %}
{% trans_default_domain 'emsco-twigs' %}


{% block breadcrumb_items %}<li>{{ block('title') }}</li>{% endblock breadcrumb_items %}


{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                {{ form_start(form) }}
                <div class="box-body">
                    <div class="row">
                        {{ form_row(form.name) }}
                        <div class="clearfix"></div>
                        {{ form_row(form.role) }}
                        <div class="clearfix"></div>
                        {{ form_row(form.icon) }}
                        <div class="clearfix"></div>
                        {{ form_row(form.public) }}
                        {%  if form.create is defined %}
                            <div class="clearfix"></div>
                            {{ form_row(form.type) }}
                        {% endif %}
                        {%  if form.options is defined %}
                            <div class="clearfix"></div>
                            {{ form_row(form.options) }}
                        {% endif %}
                    </div>
                </div>
                <div class="box-footer">
                    {%  if form.create is defined %}
                        {{ form_widget(form.create) }}
                    {% endif %}
                    {%  if form.save is defined %}
                        {{ form_widget(form.save) }}
                        {{ form_widget(form.saveAndClose) }}
                    {% endif %}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}